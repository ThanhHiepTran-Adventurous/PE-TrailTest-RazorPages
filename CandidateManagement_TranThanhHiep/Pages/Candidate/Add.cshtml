@page
@model CandidateManagement_TranThanhHiep.Pages.Candidate.AddModel
@{
}

@{
    ViewData["Title"] = "Add New Candidate";
}

<form method="post" >

<h1>Add New Candidate</h1>

<div class="mb-3" >
	<label class="form-label" >CandidateId</label>
	<input type="text" class="form-control" asp-for="AddCandidateRequest.CandidateId" />
</div>

<div class="mb-3" >
	<label class="form-label" >Fullname</label>
	<input type="text" class="form-control" asp-for="AddCandidateRequest.Fullname" />
</div>

<div class="mb-3" >
	<label class="form-label" >Birthday</label>
	<input type="date" class="form-control" asp-for="AddCandidateRequest.Birthday" />
</div>



<div class="mb-3" >
	<label class="form-label" >ProfileShortDescription</label>
	<input type="text" class="form-control" asp-for="AddCandidateRequest.ProfileShortDescription"  />
</div>


<div class="mb-3" >
	<label class="form-label" >ProfileUrl</label>
	<input type="text" class="form-control" asp-for="AddCandidateRequest.ProfileUrl" />
</div>

 <div>
	 <label>Posting Title:</label><br>
	 <select asp-for="AddCandidateRequest.PostingId" asp-items="@Model.PostingIds" ></select>
 </div>

<div class="mb-3" >
	<button type="submit" class="btn btn-primary" >Save</button>
</div>
</form>

